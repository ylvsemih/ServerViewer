    <!-- Initialize datetimepicker -->
    <script type="text/javascript">
        var NotifyMessage = "Warning server temperature over limit";
        var ids;
        $(document).ready(function () {
            //setInterval(select_Notify, 10000);

            //backward notifications


            //device list append
            $.ajax({

                type: 'POST',
                url: '/Api/DeviceConfig',
                dataType: 'json',
                data: { 'Macid': ids },
                success: function (result) {
                    ids = result[0].macID;
                    $.ajax({

                        type: 'POST',
                        url: '/Api/DeviceConfig',
                        dataType: 'json',
                        data: { 'Macid': ids },
                        success: function (result) {
                            $('#renamer').append('<h3>Cihaz: ' + result[0].name + '</h3>');
                            for (var i = 0; i < result.length; i++) {
                                $("#mnav").append('<a class="dropdown-item deviceitem" href="#" data-macid="' + result[i].macID + '" id="Device' + (i + 1) + '">' + result[i].name + ': ' + result[i].macID + '</a>');

                            }
                            ids = result[0].macID;

                            //message box append
                            $.ajax({

                                type: 'POST',
                                url: '/Api/Select_Notify',
                                dataType: 'json',
                                data: { 'Macid': ids },
                                success: function (result) {
                                    for (var i = 0; i < result.length; i++) {
                                        $('#msgBoxTop').append(' <li class="nav-item"><a class="dropdown-item"><span><span>' + result[i].name + '</span><span class="time">' + result[i].createTime + '</span></span><span  class="message">' + result[i].notificationMessage + '</span></a></li>');

                                    }
                                    $('#msgBoxTop').append('<li class="nav-item"><div class="text-center"><a class="dropdown-item" href="/home/Device_Logs"><strong>See All Alerts</strong><i class="fa fa-angle-right"></i></a></div></li>');
                                    $('#msgcount').append(result.length);
                                },
                                failure: function (response) {
                                    alert(response.responseText);
                                },
                                error: function (response) {
                                    alert(response.responseText);
                                }
                            });
                            $.ajax({
                                type: 'POST',
                                url: '/Api/Select_Message',
                                data: { 'Macid': ids },
                                dataType: "json",
                                success: function (result) {
                                    if (result != null) {
                                        for (var i = 0; i < result.length; i++) {
                                            $('#Warnings').append('<ul class="list-unstyled timeline"><li><div class="block"><div class="tags"><a href="" class="tag"><span>Uyarı</span></a></div><div class="block_content"><h2 class="title"><a>' + result[i].notificationMessage + '.</a></h2><div class="byline"><span>' + result[0].createTime + '</span> by <a>Jane Smith</a></div></div></div></li>');

                                        }

                                    }

                                }
                                ,
                                failure: function (response) {
                                    alert(response.responseText);
                                },
                                error: function (response) {
                                    alert(response.responseText);
                                }

                            });

                            $('.deviceitem').on('click', function (event) {
                                ids = $(this).data('macid');

                                $.ajax({
                                    type: 'POST',
                                    url: '/Api/GetDelay',
                                    data: { 'Macid': ids },
                                    dataType: "json",
                                    success: function (result) {
                                        $('#renamer h3').remove();
                                        $('#renamer').append('<h3>Cihaz: ' + result[0].deviceName + '</h3>');


                                    },
                                    failure: function (response) {
                                        alert(response.responseText);
                                    },
                                    error: function (response) {
                                        alert(response.responseText);
                                    }

                                });

                                $.ajax({
                                    type: 'POST',
                                    url: '/Api/Select_Message',
                                    data: { 'Macid': ids },
                                    dataType: "json",
                                    success: function (result) {

                                        $('#Warnings').empty();
                                        if (result != null) {
                                            for (var i = 0; i < result.length; i++) {
                                                $('#Warnings').append('<ul class="list-unstyled timeline"><li><div class="block"><div class="tags"><a href="" class="tag"><span>Uyarı</span></a></div><div class="block_content"><h2 class="title"><a>' + result[i].notificationMessage + '.</a></h2><div class="byline"><span>' + result[0].createTime + '</span> by <a>Jane Smith</a></div><p class="excerpt"> <a>Read&nbsp;More</a></p> </div></div></li>');
                                            }
                                        }
                                    },
                                    failure: function (response) {
                                        alert(response.responseText);
                                    },
                                    error: function (response) {
                                        alert(response.responseText);
                                    }

                                });

                            });
                        },
                        failure: function (response) {
